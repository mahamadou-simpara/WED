<form action="<%= submitUrl %>?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
    <p>
       <label for="title">Title</label>
       <input type="text" id="title" name="title" value="<%= product.title %>">
    </p>
    <p>
       <label for="image">Image</label>
       <div id="img-container">
          <input type="file" id="image" name="image" accept="image/png, image/jpg" <% if(imageRequired){%> required <% } %>>
          <img src="/products/assets/images/3f7a5700-d64a-4bc1-a210-8f74965c773e-lolo3.png" alt="prev-image" id="img">
       </div>
    </p>

    <p>
       <label for="summary">Summary</label>
       <input type="text" id="summary" name="summary" maxlength="100" value="<%= product.summary %>">
    </p>
    <p>
       <label for="price">Price</label>
       <input type="number" id="price" name="price" min="0.01" step="0.01" value="<%= product.price %>">
    </p>
    <p>
       <label for="description">Description</label>
       <textarea id="description" name="description" rows="5"><%= product.description %></textarea>
    </p>
    <p>
       <button type="reset" class="btn alt-btn">Reset</button>
       <button class="btn">Save</button>

    </p>
  </form>